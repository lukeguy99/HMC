<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:layout_margin="@dimen/popup_margin"
    android:background="@drawable/quest_details_background" >

    <com.hmc.onegoodday.widgets.OgdTextView
        android:id="@+id/quickActionDescription"
        style="@style/popup_text"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="18dp"
        android:gravity="center_horizontal"
        android:maxLines="8"
        android:minLines="6"
        android:padding="6dp"
        android:text="@string/town_hall_quick_action_description" />

    <ImageView
        android:id="@+id/quickActionLargeImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/quickActionDescription"
        android:layout_centerHorizontal="true"
        android:src="@drawable/item_blessing_large"
        tools:ignore="ContentDescription" />

</RelativeLayout>