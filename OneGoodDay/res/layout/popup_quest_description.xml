<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/quest_details_background" >

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginBottom="@dimen/popup_text_padding"
        android:layout_marginTop="@dimen/popup_text_padding"
        android:overScrollMode="never"
        tools:ignore="UselessParent" >

        <com.hmc.onegoodday.widgets.OgdTextView
            android:id="@+id/questDescription"
            style="@style/popup_text"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingLeft="@dimen/popup_text_padding"
            android:paddingRight="@dimen/popup_text_padding"
            android:text="@string/enable_gps_prompt" />        
        
    </ScrollView>

</RelativeLayout>