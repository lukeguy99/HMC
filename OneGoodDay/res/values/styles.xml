<resources xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="app_theme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="small_text">
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="large_text">
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">18sp</item>
    </style>
    
    <style name="items_header" parent="@style/small_text">
        <item name="android:background">@drawable/item_header_background</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="items_footer" parent="@style/small_text">
        <item name="android:background">@drawable/item_footer_background</item>
        <item name="android:gravity">center</item>
    </style>
    
    <style name="items_vertical_scroller">
        <item name="android:scrollbarThumbVertical">@drawable/scrollbar_thumb</item>
        <item name="android:scrollbarTrackVertical">@drawable/scrollbar_background</item>
    </style>
    
    <style name="menu_button" parent="@style/small_text">
        <item name="android:background">@drawable/menu_button_states</item>
        <item name="android:textColor">@color/button_colors</item>
    </style>
        
    <style name="popup_text">
        <item name="android:textColor">@color/popup_text_color</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="popup_button" parent="@style/small_text">
        <item name="android:background">@drawable/button_states</item>
        <item name="android:textColor">@color/button_colors</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:paddingTop">6dp</item>
    </style>

    <style name="popup_intro_button" parent="@style/popup_button">
        <item name="android:background">@drawable/button_intro_states</item>
    </style>
    
    <style name="status_bar_numeric_text_view" parent="@style/large_text">
        <item name="android:drawablePadding">@dimen/drawable_padding</item>
        <item name="android:gravity">left|bottom</item>
        <item name="android:shadowColor">@color/text_shadow_color</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">0.01</item>
    </style>

    <style name="table_row">
        <item name="android:background">@drawable/item_background</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginBottom">@dimen/popup_item_spacing</item>
        <item name="android:padding">@dimen/popup_table_row_padding</item>
    </style>
</resources>